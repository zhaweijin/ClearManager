<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/activity_layout_dp_682"
    android:layout_height="@dimen/alert_dialog_height"
    android:background="@drawable/alert_dialog_bg" >

    <LinearLayout
        android:layout_width="@dimen/activity_layout_dp_420"
        android:layout_height="@dimen/activity_layout_dp_100"
        android:id="@+id/layout_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_layout_dp_244"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_layout_dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:lineSpacingExtra="@dimen/activity_layout_dp_3"
            android:text="@string/cannot_upgrade"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_layout_sp_30" />
    </LinearLayout>


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_dp_100"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_title"
        android:layout_marginLeft="@dimen/activity_layout_dp_200"
        android:orientation="vertical">"

        <Button
            android:id="@+id/clear"
            android:layout_width="@dimen/activity_layout_dp_205"
            android:layout_height="@dimen/activity_layout_dp_100"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_selector"
            android:text="@string/go_clear"
            android:textColor="@color/alert_dialog_button_unselected_color"
            android:textSize="@dimen/activity_layout_sp_27">
        </Button>
    </LinearLayout>

</RelativeLayout>