<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/activity_layout_dp_682"
    android:layout_height="@dimen/alert_dialog_height"
    android:background="@drawable/alert_dialog_bg" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="@dimen/activity_layout_dp_420"
        android:layout_height="@dimen/activity_layout_dp_110"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_layout_dp_244"
        android:layout_marginTop="@dimen/activity_layout_dp_20"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_layout_sp_30" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_dp_85"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_title"
        android:layout_marginLeft="@dimen/activity_layout_dp_244"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/yes"
            android:layout_width="@dimen/activity_layout_dp_170"
            android:layout_height="@dimen/activity_layout_dp_94"
            android:background="@drawable/button_selector"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textColor="@color/alert_dialog_button_unselected_color"
            android:textSize="@dimen/activity_layout_sp_27" >
        </Button>

        <Button
    android:id="@+id/no"
    android:layout_width="@dimen/activity_layout_dp_170"
    android:layout_height="@dimen/activity_layout_dp_94"
    android:layout_marginLeft="@dimen/activity_layout_dp_47"
    android:background="@drawable/button_selector"
    android:text="@string/no"
    android:textAllCaps="false"
    android:textColor="@color/alert_dialog_button_unselected_color"
    android:textSize="@dimen/activity_layout_sp_27" >
    </Button>
    </LinearLayout>

    </RelativeLayout>